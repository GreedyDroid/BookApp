<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".book_detail.book_deteil_ui.BookCover"
    tools:showIn="@layout/app_bar_book_cover">

    <TextView
        android:id="@+id/bookTitleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:textSize="33sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#1e1817"/>
    <TextView
        android:id="@+id/bookFirebaseID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase ID"
        android:textSize="15sp"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="#1e1817"/>
    <TextView
        android:id="@+id/bookTotalChapterID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Chapter"
        android:textSize="15sp"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="#1e1817"/>

    <TextView
        android:id="@+id/chapterOneId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="52dp"
        android:text="ChapterOne"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="#232323"
        android:textStyle="italic"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/chapterDescriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chapter Description"
            android:paddingTop="20dp"
            android:textColor="#363636"
            android:textSize="17sp"
            android:textIsSelectable="true"
            android:focusable="true"
            android:padding="12dp"
            android:longClickable="true"/>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>